<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffdd"
    android:orientation="vertical">
 <LinearLayout
  		android:layout_width="fill_parent"
  		android:layout_height="55dip"
  		android:layout_gravity="top"
  		android:id="@+id/vege_ll10"
  		android:background="@drawable/toolbarbkimage"
  		> 
	  	<Button
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
	  		android:id="@+id/vege_back"
	  		android:text="主界面"
	  		android:textSize="16dip"
	  		android:textColor="@color/white"
	  		android:background="@drawable/toolbarbutton"
	  		></Button>
	  	<TextView
	  		android:layout_width="500dip"
	  		android:layout_height="wrap_content"
	  		android:gravity="center"
	  		android:textSize="22dip"
	  		android:textColor="@color/white"
	  		android:text="Pad点餐">
	  		</TextView>
	  	<Button
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
	  		android:id="@+id/vege_opentable"
	  		android:textColor="@color/white"
	  		android:text="开台"
	  		android:layout_marginLeft="50dip"
	  		android:textSize="16dip"
	  		android:background="@drawable/toolbarshort"
	  		>
	  		</Button>
	  	<Button
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
	  		android:id="@+id/vege_showorder"
	  		android:textColor="@color/white"
	  		android:text="已选菜品"
	  		android:layout_marginLeft="10dip"
	  		android:textSize="16dip"
	  		android:background="@drawable/toolbarlong"
	  		>
	  		</Button>
	  		<Button
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
	  		android:id="@+id/vege_addorder"
	  		android:textColor="@color/white"
	  		android:text="餐台加菜"
	  		android:layout_marginLeft="10dip"
	  		android:textSize="16dip"
	  		android:background="@drawable/toolbarlong"
	  		>
	  		</Button>
	  	<Button
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
	  		android:id="@+id/vege_moregn"
	  		android:textColor="@color/white"
	  		android:text="账单查询"
	  		android:layout_marginLeft="10dip"
	  		android:textSize="16dip"
	  		android:background="@drawable/toolbarlong"
	  		>
	  		</Button>	
   </LinearLayout>
  <LinearLayout
 		android:layout_width="wrap_content"
 		android:layout_height="50dip"
 		android:orientation="horizontal"
 		android:id="@+id/vege_ll23"
 		android:layout_gravity="top"
 		android:layout_marginTop="57dip"
 		android:layout_marginBottom="2dip"
 		>
 		<LinearLayout
        android:focusable="true" 
        android:focusableInTouchMode="true"
        android:layout_width="0px" 
        android:layout_height="0px"
        />
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/vege_tablebt"
			android:textSize="20dip"
			android:text="桌台"
			android:gravity="center_vertical"
			android:textColor="@color/red_yellow"
			android:layout_marginLeft="220dip"
			>
			</TextView>
   </LinearLayout> 
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="left|top">
       <ExpandableListView
           android:layout_width="200dip"
           android:layout_height="700dip"
           android:layout_marginTop="60dip"
           android:id="@+id/selectvege_eplv"
		   android:drawSelectorOnTop="false"	
		   android:divider="#FFCC00"
		   android:groupIndicator="@null"
           >
           </ExpandableListView>
   </LinearLayout>
    <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="right|top"
       
       >
       <com.bn.selectvege.VegeImageGrid 
          android:layout_width="820dip"
	      android:layout_height="660dip"
	       android:layout_marginTop="110dip"
	      android:id="@+id/vig"  
	      
	   />
    </LinearLayout>
</FrameLayout>