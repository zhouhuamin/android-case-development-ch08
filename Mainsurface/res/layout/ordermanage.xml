<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
   <LinearLayout
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:orientation="horizontal"
	  android:background="@drawable/toolbarbkimage"
	  >
	  <!-- 返回按钮 -->
	  <Button
	    android:id="@+id/om_but_back"
	  	android:layout_width="wrap_content"
	  	android:layout_height="wrap_content"
	  	android:background="@drawable/toolbarbutton"
	    android:text="@string/back"
	    android:textSize="16dip"
	    android:textColor="@color/white"
	  ></Button>
	  <TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="订单管理"
	    android:textSize="22dip"
	    android:textColor="@color/white"
	    android:layout_marginLeft="400dip"
	  ></TextView>	  
  </LinearLayout>
  <LinearLayout
  	android:orientation="horizontal"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content" 
  	android:paddingTop="5dip"
  	android:background="@drawable/bk_orderlistviewtitle"
  	>
  	<TextView
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:paddingLeft="20dip"
  		android:textColor="@color/black"
  		android:text="@string/waiterno"
  		/>
  	<TextView
  		android:id="@+id/om_tv_waiterno"
  		android:layout_width="80dip"
  		android:layout_height="wrap_content"
  		android:paddingLeft="10dip"
  		android:textColor="@color/black"
  		/>
  	<TextView
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_marginLeft="38dip"
  		android:textColor="@color/black"
  		android:text="@string/orderid"
  		/>
  	<TextView
  		android:id="@+id/om_tv_orderid"
  		android:layout_width="200dip"
  		android:layout_height="wrap_content"
  		android:paddingLeft="10dip"
  		android:textColor="@color/black"
  		/>
  	<TextView
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_marginLeft="62dip"
  		android:textColor="@color/black"
  		android:text="@string/ordertime"
  		/>
  	<TextView
  		android:id="@+id/om_tv_ordertime"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_marginLeft="10dip"
  		android:textColor="@color/black"
  		/>
  	</LinearLayout>   
  	<HorizontalScrollView
  		android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
  		>
	<LinearLayout
		android:orientation="vertical"
		android:background="@color/white"
	  	android:layout_width="fill_parent"
	  	android:layout_height="fill_parent" >	   		
	   <LinearLayout
	  	android:orientation="horizontal"
	  	android:paddingLeft="25dip"
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content" 
	  	android:background="@drawable/bk_orderlistviewtitle"
	 	>
	 		<!-- 桌子名-->
	 		<TextView
				android:id="@+id/om_tv_tableno"
				android:layout_width="70dip"
				android:layout_height="wrap_content"
				android:textColor="@color/black"
				android:text="桌名"
				/>
			<!-- 菜品名称 -->
			<TextView
				android:id="@+id/om_tv_vegename"
				android:layout_width="100dip"
				android:layout_height="wrap_content"
				android:textColor="@color/black"
				android:text="@string/vegename"
				/>
			<!-- 菜品数量 -->
			<TextView
				android:id="@+id/om_tv_vegecount"
				android:layout_width="70dip"
				android:layout_height="wrap_content"
				android:layout_marginLeft="40dip"
				android:textColor="@color/black"
				android:text="@string/vegecount"
				/>
			<!-- 菜品价格 -->
			<TextView
				android:id="@+id/om_tv_vegeprice"
				android:layout_width="70dip"
				android:layout_height="wrap_content"
				android:layout_marginLeft="60dip"
				android:textColor="@color/black"
				android:text="@string/vegeprice"
				/>
			<!-- 菜品要求设置 -->
			<TextView
				android:id="@+id/om_tv_setup"
				android:layout_width="70dip"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dip"
				android:textColor="@color/black"
				android:text="删除"
				/>
	 	</LinearLayout>
	 	<LinearLayout
	 		android:orientation="vertical"
	  		android:layout_width="fill_parent"
	  		android:layout_height="590dip" 
	  		>
		  	<ListView 
			    android:id="@+id/om_listview01"
				android:layout_width="fill_parent" 
				android:layout_height="590dip"
				android:listSelector="#00000000"
			    android:gravity="left"
			    
			    /> 
		 </LinearLayout>
	</LinearLayout>
	</HorizontalScrollView>
		<LinearLayout
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:paddingLeft="20dip"
		  android:orientation="horizontal"
		  android:background="@drawable/toolbarbkimage"
		>
		<TextView
			android:textColor="@color/white"
			android:layout_width="wrap_content"
			android:layout_marginTop="10dip"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dip"
			android:textSize="20dip"
			android:text="@string/deskid"
		></TextView>
		<TextView
			android:id="@+id/om_tv_deskid"
			android:textColor="@color/white"
			android:layout_width="100dip"
			android:layout_marginTop="10dip"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dip"
			android:textSize="20dip"
		></TextView>
		<TextView
			android:textColor="@color/white"
			android:layout_width="wrap_content"
			android:layout_marginTop="10dip"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dip"
			android:textSize="20dip"
			android:text="@string/allmoney"
		></TextView>
		<TextView
			android:id="@+id/om_tv_allmoney"
			android:textColor="@color/white"
			android:layout_width="100dip"
			android:layout_marginTop="10dip"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dip"
			android:textSize="20dip"
		></TextView>

	</LinearLayout>
  
</LinearLayout>
