<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffdd"
    android:orientation="vertical">
   <LinearLayout
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:orientation="horizontal"
	  android:background="@drawable/toolbarbkimage"
	  android:layout_gravity="top"
	  >
	  <Button
	   	android:layout_width="wrap_content"
	  	android:layout_height="wrap_content"
	  	android:background="@drawable/toolbarbutton"
	  	android:text="@string/back"
	  	android:textSize="16dip"
	  	android:textColor="@color/white"
	  	android:id="@+id/showorder_back"
	  	></Button>	  
	  <TextView
	    android:layout_width="250dip"
	    android:layout_height="wrap_content"
	    android:text="已选菜品"
	    android:textSize="22dip"
	    android:textColor="@color/white"
	    android:layout_marginLeft="380dip"
	  	></TextView>	 
	  <Button
	   	android:layout_width="wrap_content"
	  	android:layout_height="wrap_content"
	  	android:background="@drawable/toolbarshort"
	   	android:textColor="@color/white"
	  	android:text="@string/xd"
	  	android:layout_marginLeft="220dip"
	  	android:textSize="18dip"
	  	android:id="@+id/showorder_xd"
	  	></Button>
	 </LinearLayout>
	 <LinearLayout 
      	 android:layout_marginTop="60dip"
      	 android:layout_width="fill_parent"
		 android:layout_height="wrap_content"
		 android:orientation="vertical"
      	>
	   <LinearLayout 
	      	 android:layout_width="fill_parent"
			 android:layout_height="wrap_content"
			 android:orientation="horizontal"
			 android:background="@drawable/bk_orderlistviewtitle"
	      	>
		   <TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="序号"
				android:textColor="@color/black"
				></TextView>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="菜品名称"
				android:textColor="@color/black"
				android:layout_marginLeft="80dip"
				></TextView>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="菜品价格"
				android:textColor="@color/black"
				android:layout_marginLeft="60dip"
				></TextView>
			<TextView
				android:layout_width="50dip"
				android:layout_height="wrap_content"
				android:text="数量"
				android:textColor="@color/black"
				android:layout_marginLeft="60dip"
				></TextView>
			<TextView
				android:layout_width="30dip"
				android:layout_height="wrap_content"
				android:text="手动输入"
				android:textColor="@color/black"
				android:layout_marginLeft="25dip"
				></TextView>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="小计 "
				android:textColor="@color/black"
				android:layout_marginLeft="85dip"
				></TextView>				
		</LinearLayout>
		<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="660dip"
			    >
				<com.bn.showorder.ListViewBar
			    	  android:layout_width="1024dip"
				      android:layout_height="660dip"
				      android:id="@+id/listviewbar"  
					>
					</com.bn.showorder.ListViewBar>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
 		android:layout_width="fill_parent"
 	 	android:layout_height="wrap_content"
  		android:orientation="horizontal"
  		android:background="@drawable/toolbarbkimage"
  		android:layout_gravity="bottom"
		>
		<TextView
			android:text="@string/deskid"
			android:textColor="@color/white"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dip"
			android:textSize="20dip"
			>
			</TextView>
		<TextView
			android:text=""
			android:textColor="@color/white"
			android:layout_width="100dip"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dip"
			android:textSize="20dip"
			android:id="@+id/showorder_deskid"
			>
			</TextView>
		<TextView
			android:text="@string/allmoney"
			android:textColor="@color/white"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dip"
			android:textSize="20dip"
			>
			</TextView>
		<TextView
			android:text=""
			android:textColor="@color/white"
			android:layout_width="100dip"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dip"
			android:textSize="20dip"
			android:id="@+id/showorder_money"
			>
			</TextView>
	</LinearLayout>
</FrameLayout>