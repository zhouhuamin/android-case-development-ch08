<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingBottom="20dip"
    >
 <LinearLayout
  android:layout_width="350dip"
  android:layout_height="300dip"
  android:orientation="vertical"
  android:background="@drawable/shapecorner"
  >
  <TextView
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:text="信息确认"
  android:textStyle="bold"
  android:textSize="24dip"
   android:gravity="center"
  android:layout_marginTop="5dip"
  android:textColor="@color/orange"
  > 
  </TextView>
  <TextView
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:text="所选区域:"
  android:textStyle="bold"
  android:textSize="20dip"
  android:layout_marginTop="15dip"
  android:textColor="@color/orange"
  android:layout_marginLeft="40dip"
  android:id="@+id/selectroomid"
  > 
  </TextView>
  <TextView
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:text="餐台名称:"
  android:textStyle="bold"
  android:textSize="20dip"
  android:layout_marginTop="10dip"
   android:layout_marginLeft="40dip"
  android:textColor="@color/orange"
  android:id="@+id/selectpointname"
  > 
  </TextView>
   <TextView
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:text="餐台状态:"
  android:textStyle="bold"
  android:textSize="20dip"
  android:layout_marginTop="10dip"
  android:textColor="@color/orange"
   android:layout_marginLeft="40dip"
  android:id="@+id/tablestatement"
  > 
  </TextView>
  <TextView
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:text="最多容纳人数:"
  android:textStyle="bold"
  android:textSize="20dip"
  android:layout_marginTop="10dip"
   android:layout_marginLeft="40dip"
  android:textColor="@color/orange"
  android:id="@+id/maxnum"
  > 
  </TextView><TextView
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:text="是否选择此餐台"
  android:textStyle="bold"
  android:textSize="20dip"
   android:layout_marginLeft="40dip"
  android:layout_marginTop="10dip"
  android:textColor="@color/orange"
  > 
  </TextView>
  <LinearLayout
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:orientation="horizontal"
	   android:gravity="center"
	  android:layout_marginTop="20dip"
	  
  >
  <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/buttonbg"
    android:text="@string/ok"
    android:textColor="@color/orange"
    android:id="@+id/isselect"
    android:textSize="20dip"
  ></Button>
   <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/buttonbg"
    android:layout_marginLeft="20dip"
    android:text="@string/reset"
    android:textColor="@color/orange"
    android:textSize="20dip"
    android:id="@+id/notselect"
  ></Button>
  </LinearLayout>
  </LinearLayout>

    

</LinearLayout>