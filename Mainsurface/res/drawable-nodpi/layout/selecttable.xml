<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffdd"
    android:orientation="vertical"
    >
    <LinearLayout
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_gravity="top"
     android:orientation="horizontal"
     android:background="@drawable/toolbarbkimage"
      >
     <Button
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:background="@drawable/toolbarbutton"
	   android:text="@string/back"
	   android:id="@+id/pointback"
	   android:textSize="16dip"
	   android:textColor="@color/white"
	   android:layout_marginLeft="50dip"
      ></Button> 
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pointinfo" 
        android:textSize="22dip"
        android:textColor="@color/white"
        android:layout_marginLeft="300dip"
       ></TextView>
       <Button
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:background="@drawable/toolbarshort"
	   android:text="@string/refrush"
	   android:id="@+id/pointrefrush"
	   android:textSize="16dip"
	   android:textColor="@color/white"
	   android:layout_marginLeft="150dip"
      ></Button>
    </LinearLayout>
   <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="650dip"
      android:orientation="vertical"
      android:background="@drawable/border"
      android:layout_gravity="top|left"
      android:layout_marginTop="60dip"
    >
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:text="@string/pointselect" 
        android:textSize="22dip"
         android:layout_gravity="center"
        android:textColor="@color/orange"
     ></TextView>
     <ExpandableListView
        android:layout_width="200dip"
        android:layout_height="650dip"
        android:id="@+id/selecttable_eplv"
		android:drawSelectorOnTop="false"	
		android:divider="@color/orange"
		android:groupIndicator="@null"
		android:childDivider="@color/orange"
     ></ExpandableListView>
  </LinearLayout>
    <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="650dip"
       android:layout_gravity="right|top"
       android:orientation="vertical"
       android:layout_marginTop="60dip"
      >
      <TextView
        android:layout_width="400dip"
        android:layout_height="wrap_content"
        android:text="未选择餐台" 
        android:textSize="22dip"
        android:id="@+id/tableselectshow"
        android:textColor="@color/orange"
     ></TextView>
       <com.bn.table.TableInfoGrid 
          android:layout_width="820dip"
	      android:layout_height="650dip"
	      android:id="@+id/tableinfogrid"  
	   />
    </LinearLayout>
    <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="bottom"
       android:orientation="horizontal"
        android:background="@drawable/toolbarbkimage"
      >
       <ImageView
	   android:layout_marginLeft="450dip"
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:src="@drawable/room_free"
	  ></ImageView>
	  <TextView
	  android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:layout_marginLeft="5dip"
	   android:text="无人"
	   android:textSize="20dip"
	  ></TextView>
	   <ImageView
	   android:layout_marginLeft="10dip"
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:src="@drawable/room_using"
	  ></ImageView>
	  <TextView
	  android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:layout_marginLeft="5dip"
	   android:text="有人"
	   android:textSize="20dip"
	  ></TextView>
	   <ImageView
	   android:layout_marginLeft="10dip"
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:src="@drawable/room_checkout"
	  ></ImageView>
	  <TextView
	  android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:layout_marginLeft="5dip"
	   android:textSize="20dip"
	   android:text="选中"
	  ></TextView>
	  <ImageView
	   android:layout_marginLeft="10dip"
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:src="@drawable/room_pre"
	  ></ImageView>
	  <TextView
	  android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:layout_marginLeft="5dip"
	   android:textSize="20dip"
	   android:text="已被订"
	  ></TextView>
      </LinearLayout>
</FrameLayout>